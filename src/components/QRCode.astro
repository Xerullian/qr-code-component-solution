---
const { imageSource, imageAltText, header, text } = Astro.props;
---

<div
    class="font-outfit shadow-lg shadow-slate-300 leading-tight max-w-[325px] flex flex-col flex-initial bg-white border-solid m-4 border-2 p-4 rounded-3xl"
>
    <img
        class="rounded-xl object-contain w-[290px] h-[290px] cursor-default"
        src={imageSource}
        alt={imageAltText}
    />

    <div class="text-center my-6">
        <h3 class="text-[22px] font-bold px-4">
            {header}
        </h3>
        <p class="mt-4 px-4 text-grayish-blue text-base font-normal">{text}</p>
    </div>
</div>
