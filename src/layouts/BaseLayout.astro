---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/favicons/favicon-32x32.png"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-light-gray">
        <slot />
    </body>
</html>

<style>
    @font-face {
        font-family: 'Outfit';
        font-weight: 100 900;
        src: url('/fonts/outfit-variable-weight.ttf') format('truetype')
                tech(variations),
            url('/fonts/outfit-variable-weight.ttf')
                format('truetype-variations');
    }
</style>
