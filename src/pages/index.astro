---
import Layout from '../layouts/BaseLayout.astro';
import QRCode from '../components/QRCode.astro';
---

<Layout title="QR Code Component">
    <main class="grid h-screen place-content-center">
        <QRCode
            imageSource="./images/image-qr-code.png"
            header="Improve your front-end skills by building projects"
            text="Scan the QR code to visit Frontend Mentor and take your coding skills to the next level"
        />
    </main>
</Layout>
